{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:run": "yarpm run build && yarpm run http-server /dist",
    "cleanup": "sort-package-json",
    "debug:autoprefixer": "yarpm run autoprefixer --info",
    "dev": "vite",
    "dev:https": "vite --https",
    "dev:verbose": "vite --debug",
    "lint:js": "vue-cli-service lint --no-fix",
    "lint:styles": "stylelint '**/*.{vue, css, scss}'; exit 0",
    "lint:styles:fix": "stylelint --fix '**/*.{vue, css, scss}'; exit 0",
    "format": "prettier --write '**/*.{vue, ts, js, json, md, mdx}';",
    "serve": "yarpm run dev"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "tailwindcss": "^1.8.0",
    "vite": "^1.0.0-rc.4",
    "vue": "^v3.1.1",
    "vue-router": "^v4.0.8"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@vue/cli-plugin-eslint": "^4.2.3",
    "@vue/cli-service": "^4.5.4",
    "@vue/compiler-sfc": "^3.1.1",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "5.1.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "cssnano": "^4.1.10",
    "eslint": "6.8.0",
    "eslint-loader": "^4.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "7.0.0-beta.3",
    "http-server": "^0.12.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.1.1",
    "prettier": "^2.1.2",
    "sort-package-json": "^1.40.0",
    "string-width": "^4.2.0",
    "stylelint": "^13.6.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.8.3",
    "yarpm": "^0.2.1"
  }
}
